{
  "name": "odin-electron",
  "version": "0.1.0",
  "private": true,
  "main": "main.js",
  "type": "module",
  "scripts": {
    "start": "electron .",
    "dev:renderer": "cd renderer && npm run dev",
    "dev": "set RENDERER_URL=http://127.0.0.1:5173 && electron .",
    "dev:all": "start cmd /c \"cd renderer && npm run dev\" & set RENDERER_URL=http://127.0.0.1:5173 && electron .",
    "dev:all:ps": "Start-Process powershell -ArgumentList '-NoExit', '-Command', 'cd renderer; npm run dev' -WindowStyle Hidden; $env:RENDERER_URL='http://127.0.0.1:5173'; electron .",
    "build:renderer": "cd renderer && npm install && npm run build",
    "build:python": "node scripts/build-python.js",
    "build": "npm run build:renderer && npm run build:python",
    "pack:win": "npm run build && electron-builder --win portable",
    "dist:win": "npm run build && electron-builder --win nsis",
    "clean": "rimraf dist && rimraf python-dist"
  },
  "devDependencies": {
    "electron": "28.3.3",
    "electron-builder": "24.13.3",
    "rimraf": "^5.0.0"
  },
  "dependencies": {
    "axios": "1.6.8"
  },
  "build": {
    "appId": "com.odin.desktop",
    "productName": "Odin",
    "icon": "renderer/public/images/icon.png",
    "files": [
      "**/*",
      "!dist/**",
      "!node_modules/**/.cache/**",
      "!../.odin_index/*.csv",
      "!.odin_index/*.csv",
      "python-dist/**",
      "renderer/dist/**",
      "renderer/public/fonts/**"
    ],
    "asarUnpack": [
      "python-dist/**",
      "../backend/**",
      "../Langchain/**",
      "../parsers/**",
      "**/*.py"
    ],
    "extraResources": [
      {
        "from": "python-dist",
        "to": "python-dist"
      },
      {
        "from": "renderer/dist/fonts",
        "to": "fonts"
      }
    ],
    "directories": {
      "buildResources": "build",
      "output": "dist"
    },
    "win": {
      "target": [
        { "target": "nsis", "arch": ["x64"] },
        { "target": "portable", "arch": ["x64"] }
      ]
    },
    "nsis": {
      "oneClick": true,
      "perMachine": false,
      "allowToChangeInstallationDirectory": false
    }
  }
}
